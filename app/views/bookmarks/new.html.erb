<div class="container">
  <h1>Bookmarks</h1>
  <%= simple_form_for [@list, @bookmark] do |f| %>
    <%= f.input :comment, placeholder: 'Enter a comment about the movie' %>
    <%= f.association :movie, prompt: "Select a movie", input_html: {data: { controller: "tom-select"}} %>
    <%= f.submit class: "btn btn-primary" %>
  <% end %>
</div>

<div class="container">
  <h1>New Bookmark</h1>
  <%= simple_form_for [@list, @bookmark] do |f| %>
    <%= f.input :comment %>
    <%= f.association :movie, collection: Movie.all  %>
    <%= f.submit %>
  <% end %>
  <%= link_to "Back to all lists", lists_path, class: "btn btn-primary"  %>
</div>
